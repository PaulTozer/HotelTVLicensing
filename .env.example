# OpenAI API Key (required for AI extraction)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Azure OpenAI configuration
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your_azure_key
# AZURE_OPENAI_DEPLOYMENT=gpt-4

# Azure AI Foundry - Bing Grounding (primary search)
# Replaces SerpAPI - uses Azure AI Foundry agent with Bing grounding
AZURE_AI_PROJECT_ENDPOINT=https://your-foundry-endpoint.services.ai.azure.com/api/projects/yourproject
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4o
BING_CONNECTION_NAME=your-bing-connection-name
USE_BING_GROUNDING=true

# SerpAPI (fallback only, not required if Bing Grounding is enabled)
# SERPAPI_API_KEY=your_serpapi_key

# Rate limiting
MAX_REQUESTS_PER_MINUTE=30
SCRAPE_TIMEOUT_SECONDS=30

# Logging
LOG_LEVEL=INFO
